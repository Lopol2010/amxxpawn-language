{
    "comments": {
        "blockComment": [
            "/*",
            "*/"
        ],
        "lineComment": "//"
    },

    "surroundingPairs": [
        [ "(", ")" ],
        [ "[", "]" ],
        [ "{", "}" ],
        [ "\"", "\"" ],
        [ "'", "'" ]
    ],

    "brackets": [
        [ "{", "}" ],
        [ "(", ")" ],
        [ "[", "]" ]
    ],

    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "'", "close": "'", "notIn": ["string", "comment"] },
        { "open": "\"", "close": "\"", "notIn": ["string"] },
        { "open": "/**", "close": " */", "notIn": ["string"] }
    ],

    "folding": {
        "offSide": false,
        "markers": {
            "start": "^\\s*//#region",
            "end": "^\\s*//#endregion"
        }
    }
}
